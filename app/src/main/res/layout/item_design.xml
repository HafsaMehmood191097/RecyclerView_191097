<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/innerlayout"
        android:background="@color/white"

        >

           <androidx.cardview.widget.CardView
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:id="@+id/cardview"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="15dp"
               >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imgview"
                android:src="@drawable/burger"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                />

           </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/burgername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/cardview"
            android:text="Chicken Burger"
            android:textSize="19dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="40dp"
            android:id="@+id/deleteicon"
            />
        <TextView
            android:id="@+id/burgerprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/cardview"
            android:text="FastFood: 250"
            android:textSize="15dp"
            android:layout_marginLeft="17dp"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/reviwstrs"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:layout_toRightOf="@+id/cardview"
            android:src="@drawable/reviewstrs" />

        <TextView
            android:id="@+id/num_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reviwstrs"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:text="Review 23"
            android:textSize="11dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="___________________________________________________________"
            android:textColor="#CDC7C7"
            android:textSize="5dp"
            android:layout_marginTop="-5dp"
            tools:ignore="NotSibling" />

    </RelativeLayout>

</RelativeLayout>